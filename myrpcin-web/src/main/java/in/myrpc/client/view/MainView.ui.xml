<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:o="urn:import:org.orgama.client.widget">

	<ui:style src="res/css/MainView.css"/>

    <g:HTMLPanel>
		<h2>Welcome to MyRpc.in</h2>
		<p>
			This application provides you with a way to control your remote
            devices safely and simply.
		</p>
        <g:HTMLPanel styleName="{style.authWidget}" ui:field="pnlAuth"/>

        <g:Label ui:field="lblStatus"/>

        <g:TextBox ui:field="txtToken"/>
        <g:Button ui:field="btnOpen">Open</g:Button>

        <g:HTMLPanel ui:field="pnlAccounts"/>
    </g:HTMLPanel>
</ui:UiBinder>